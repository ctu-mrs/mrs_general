<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>
  <arg name="debug" default="false" />
  <arg name="standalone" default="$(optenv STANDALONE false)" />

  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="debug_roslaunch"/>

  <group ns="$(arg uav_name)" if="$(eval arg('standalone') == 0)">

    <!-- Nodelet manager -->
    <node pkg="nodelet" type="nodelet" name="$(arg uav_name)_nodelet_manager" args="manager" output="screen" launch-prefix="$(arg launch_prefix)">
      <param name="num_worker_threads" value="16" />
    </node>

  </group>

</launch>
